{
  "name": "ig-reels-bot",
  "version": "1.0.0",
  "description": "Telegram bot for downloading Instagram reels",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prod": "pnpm run build && pm2 start ecosystem.config.js",
    "stop": "pm2 stop ig",
    "restart": "pm2 restart ig",
    "logs": "pm2 logs ig"
  },
  "keywords": [
    "telegram",
    "bot",
    "instagram",
    "reels",
    "downloader"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "@types/node": "^22.15.30",
    "axios": "^1.9.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "grammy": "^1.36.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
